@model ControleDeCarga.Models.HistoricoCarga

@using (Html.BeginForm("Create","Historico")) 
{
    //@Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.EventoId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EventoId", String.Empty)
                @Html.ValidationMessageFor(model => model.EventoId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data)
                @Html.ValidationMessageFor(model => model.Data)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MotoristaId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MotoristaId", String.Empty)
                @Html.ValidationMessageFor(model => model.MotoristaId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VeiculoId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VeiculoId", String.Empty)
                @Html.ValidationMessageFor(model => model.VeiculoId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observacoes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Observacoes)
                @Html.ValidationMessageFor(model => model.Observacoes)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

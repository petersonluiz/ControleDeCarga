@model IEnumerable<ControleDeCarga.Models.Armador>

@{
    ViewBag.Title = "Armadores";
}
@section Scripts {
     <script type="text/javascript">
        StyleGridButtons();        
     </script>
}
<hr/>
<div class="container">
<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
    <div class="col-lg-8">
        <table class="table table-striped">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PessoaContato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { data_edit = true })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { data_detail = true })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { data_delete = true })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PessoaContato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
